.title
    height: .8rem
    padding: 0 .16rem
    color: #333
    font-weight: 500
    font-size: .36rem
    line-height: .8rem
    background-color: #f7f7f7
.item
    display flex
    padding: .2rem .4rem
    padding-bottom 0rem
    background-color: #fff
    border-bottom: .005rem solid #ebebeb
    .left 
        width 65%
        .item-title
            font-size .3rem
            line-height .4rem
            span 
                height: .16rem
                padding: 0 .03rem
                margin-right: .06rem
                font-size: .2rem
                color: #fff
                text-align: center
                border-radius: .04rem
                vertical-align: text-bottom
                box-sizing: border-box
                background-color: #4169e2
        .item-time
            font-size .2rem
            line-height .4rem
            color #999999
            padding-top .4rem
    .right
        flex 1
        width 40%
        text-align right
        img 
            width 2rem
            border-radius .2rem

.more
    display: block
    height: 1rem
    color: #4169e2
    font-size: .32rem
    line-height: 1rem
    text-align: center
    background-color: #fff
    text-decoration none
.line
    width 100%
    height .2rem
    background-color #f7f7f7