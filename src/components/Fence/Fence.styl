.title
    display: flex
    align-items: center
    justify-content: flex-start
    height: .4rem
    padding: .26rem .16rem
    font-weight: 500
    font-size: .3rem
    line-height: .44rem
    background: #fff
    border-bottom: .005rem solid #ebebeb
    i 
        display: inline-block
        width: .1rem
        height: .4rem
        margin-right: .08rem
        vertical-align: middle
        background: #4169e2

.rumor
    width 100%
    position relative
    top 0
    left 0
    padding-bottom: .26rem
    .list
        margin: .22rem .26rem
        border-bottom: .005rem solid #ebebeb
        padding-bottom .2rem
        background-color: #2834b9
        border-radius: .14rem
        .question
            font-size .34rem
            font-weight 600
            color #fff
            padding .2rem 0rem 0rem .2rem
            .num
                display inline-block
                width .4rem
                height .4rem
                background-color #ff1200
                border-radius .2rem
                text-align center
                margin-right .1rem
                color #fff
                line-height .4rem
        .page
            h1
                font-size .3rem
                color #2834b9
                color #fff
                padding .1rem 0rem .1rem .2rem
                line-height .4rem
            p
                font-size .2rem
                text-indent .5rem
                color #2834b9
                padding: .1rem
                margin 0 .2rem
                overflow: hidden
                background-color: #fff
                border-radius: .1rem
    .go
        display: block
        height: .6rem
        margin: .16rem .16rem 0
        color: #3540c7
        font-weight: 700
        font-size: .36rem
        line-height: .6rem
        text-align: center
        background-color: #edf1ff
        border-radius: .22rem
        text-decoration none
        paddding .2rem 0rem
